                        <a class="button2" href="#">Order Now </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- //banner -->
<!-- top Products -->
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>P</span>roducts &
            <span>S</span>ervices
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <!-- product left -->
            <div class="agileinfo-ads-display col-lg-12">
                <div class="wrapper">
                    <!-- first section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                        <h3 class="heading-tittle text-center font-italic">Tents</h3>
                        <div class="row">
                            @foreach (var item in Model.Where(x => x.CategoryID == 1))
                            {
                                <div class="col-md-4 product-men mt-5">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="/Equipments/RetrieveImage/@item.EquipmentID" alt="" height=200 width=320 />
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a href="#" class="link-product-add-cart">Quick View</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a href="#">@Html.DisplayFor(modelItem => item.Name)</a>
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">@item.Rentprice.ToString("R0.00")</span>
                                            </div>
                                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                @if (item.Quantity == 0)
                                                {
                                                    <a href="@Url.Action(actionName: "AddToCart", controllerName: "Home", routeValues: new { id = item.EquipmentID })" class="btn disabled btn-default"><i class="fa fa-shopping-cart disabled"></i> Out of stock</a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action(actionName: "AddToCart", controllerName: "Home", routeValues: new { id = item.EquipmentID })" class="button btn"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- //first section -->

                    <!-- second section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                        <h3 class="heading-tittle text-center font-italic">Tables</h3>
                        <div class="row">
                            @foreach (var item in Model.Where(x => x.CategoryID == 2))
                            {

                                <div class="col-md-4 product-men mt-5">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="/Equipments/RetrieveImage/@item.EquipmentID" alt="" height=200 width=270 />
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a href="#" class="link-product-add-cart">Quick View</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a href="#">@Html.DisplayFor(modelItem => item.Name)</a>
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">@item.Rentprice.ToString("R0.00")</span>
                                            </div>
                                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                @if (item.Quantity == 0)
                                                {
                                                    <a href="@Url.Action(actionName: "AddToCart", controllerName: "Home", routeValues: new { id = item.EquipmentID })" class="btn disabled btn-default"><i class="fa fa-shopping-cart disabled"></i> Out of stock</a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action(actionName: "AddToCart", controllerName: "Home", routeValues: new { id = item.EquipmentID })" class="button btn"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!--//second section -->

                    <!-- third section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                        <h3 class="heading-tittle text-center font-italic">Chairs</h3>
                        <div class="row">
                            @foreach (var item in Model.Where(x => x.CategoryID == 3))
                            {
                                <div class="col-md-4 product-men mt-5">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="/Equipments/RetrieveImage/@item.EquipmentID" alt="" height=200 width=270 />
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a href="#" class="link-product-add-cart">Quick View</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a href="#">@Html.DisplayFor(modelItem => item.Name)</a>
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">@item.Rentprice.ToString("R0.00")</span>
                                            </div>
                                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                @if (item.Quantity == 0)
                                                {
                                                    <a href="@Url.Action(actionName: "AddToCart", controllerName: "Home", routeValues: new { id = item.EquipmentID })" class="btn disabled btn-default"><i class="fa fa-shopping-cart disabled"></i> Out of stock</a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action(actionName: "AddToCart", controllerName: "Home", routeValues: new { id = item.EquipmentID })" class="button btn"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="product-sec1 product-sec2 px-sm-5 px-3">
                        <div class="row">
                            <h3 class="col-md-4 effect-bg">Decoration Designs</h3>
                            <p class="w3l-nut-middle">Get Extra 10% Off</p>
                            <div class="col-md-8 bg-right-nut">
                                <img style="margin-right:-3.6vw;" src="~/Content/TrinityImages/Decoration.jpg" width="400" height="350" alt="">
                            </div>
                        </div>
                    </div>
                    <!-- //third section -->
                </div>
            </div>
        </div>
    </div>
</div>
 